+require('dotenv').config();
+const mysql = require('mysql');
+const Database = require('better-sqlite3');
+
+function createSQLitePool(file) {
+  const db = new Database(file);
+  return {
+    query(sql, params, cb) {
+      try {
+        const stmt = db.prepare(sql);
+        const result = params ? stmt.all(params) : stmt.all();
+        cb(null, result);
+      } catch (err) {
+        cb(err);
+      }
+    },
+    getConnection(cb) {
+      const connection = {
+        query(sql, params, callback) {
+          try {
+            const stmt = db.prepare(sql);
+            const result = params ? stmt.all(params) : stmt.all();
+            callback(null, result);
+          } catch (err) {
+            callback(err);
+          }
+        },
+        release() {}
+      };
+      cb(null, connection);
+    }
+  };
+}
+
+let poolC5tpms;
+let poolC5pneutyres;
+let poolC5sluzbyint;
+let db;
+
+if (process.env.DB_DRIVER === 'sqlite') {
+  const file = process.env.SQLITE_FILE || 'test.db';
+  poolC5tpms = createSQLitePool(file);
+  poolC5pneutyres = createSQLitePool(file);
+  poolC5sluzbyint = createSQLitePool(file);
+  db = createSQLitePool(file);
+} else {
+  db = mysql.createConnection({
+    host: process.env.C5SLUZBYINT_HOST,
+    user: process.env.C5SLUZBYINT_USER,
+    password: process.env.C5SLUZBYINT_PASSWORD,
+    database: process.env.C5SLUZBYINT_DATABASE
+  });
+
+  poolC5tpms = mysql.createPool({
+    connectionLimit: 10,
+    host: process.env.C5TPMS_HOST,
+    user: process.env.C5TPMS_USER,
+    password: process.env.C5TPMS_PASSWORD,
+    database: process.env.C5TPMS_DATABASE,
+    charset: 'utf8mb4'
+  });
+
+  poolC5pneutyres = mysql.createPool({
+    connectionLimit: 10,
+    host: process.env.C5PNEUTYRES_HOST,
+    user: process.env.C5PNEUTYRES_USER,
+    password: process.env.C5PNEUTYRES_PASSWORD,
+    database: process.env.C5PNEUTYRES_DATABASE,
+    charset: 'utf8mb4'
+  });
+
+  poolC5sluzbyint = mysql.createPool({
+    connectionLimit: 10,
+    host: process.env.C5SLUZBYINT_HOST,
+    user: process.env.C5SLUZBYINT_USER,
+    password: process.env.C5SLUZBYINT_PASSWORD,
+    database: process.env.C5SLUZBYINT_DATABASE,
+    charset: 'utf8mb4'
+  });
+}
+
+module.exports = { poolC5tpms, poolC5pneutyres, poolC5sluzbyint, db };
